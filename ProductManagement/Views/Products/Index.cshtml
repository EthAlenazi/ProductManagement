@model ProductsIndexVm

<div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="m-0">Products</h2>
    <a class="btn btn-primary" asp-action="Create">Add Product</a>
</div>

<partial name="_FilterForm" model="Model.Filter" />

<table class="table table-striped">
    <thead>
        <tr><th>Name</th><th>Price</th><th>Creation</th><th>Provider</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Items)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.CreationDate.ToString("yyyy-MM-dd")</td>
                <td>@p.ServiceProviderName</td> <!-- كان @p.ServiceProviderName -->
            </tr>
        }
    </tbody>
</table>
